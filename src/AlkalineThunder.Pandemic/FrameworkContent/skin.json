      "background": "#fff",
      "foreground": "#000",
      "primary": "#1baaf7",
      "secondary": "#808080",
      "warning": "orange",
      "error": "red",
      "info": "purple",
      "success": "green"
    },
    "dark": {
      "background": "#000",
      "foreground": "#fff",
      "primary": "#1baaf7",
      "secondary": "#808080",
      "warning": "orange",
